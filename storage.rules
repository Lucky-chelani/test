rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to upload to the trek-images folder
    match /trek-images/{fileName} {
      allow write: if true;
    }

    // For admin-specific uploads, restrict to specific emails
    match /admin/{fileName} {
      allow write: if request.auth != null && 
        (request.auth.token.email in ['luckychelani950@gmail.com', 'test@example.com', 'youremail@example.com']);
    }
  }
}
